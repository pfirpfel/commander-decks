{
  "name": "commander-decks",
  "version": "1.0.0",
  "description": "My deck list collection for the Magic: The Gathering Commander format",
  "main": "index.js",
  "scripts": {
    "test": "glob --windows-path-no-escape -c \"mtgo-deck-formatter -c \" {paper,online}/**/*.txt",
    "format-all": "glob --windows-path-no-escape -c \"mtgo-deck-formatter -w \" {paper,online}/**/*.txt",
    "format": "mtgo-deck-formatter -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pfirpfel/commander-decks.git"
  },
  "keywords": [
    "mtg",
    "mtgo",
    "commander",
    "edh"
  ],
  "author": "Michael Kuenzli",
  "license": "CC-BY-4.0",
  "bugs": {
    "url": "https://github.com/pfirpfel/commander-decks/issues"
  },
  "homepage": "https://github.com/pfirpfel/commander-decks#readme",
  "devDependencies": {
    "glob": "^11.0.1",
    "mtgo-deck-formatter": "^2.0.3",
    "pre-commit": "^1.2.2"
  }
}
